<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on menu bar items</file-type>
        <format-version type="int">1</format-version>
    </meta>
    <menubar-items>
        <menu>
            <label>CanvasSkeleton</label>
            <enabled type="bool">true</enabled>

            <item>
                <label>Say hello</label>
                <name>skeleton-say-hello</name>
                <binding>
                    <command>nasal</command>
                    <script>globals['__addon[org.flightgear.addons.CanvasSkeleton]__'].Message.success("Hello, I am a sample addon.");</script>
                </binding>
            </item>
            <item>
                <label>Transient About Dialog...</label>
                <name>skeleton-about-transient-dialog</name>
                <binding>
                    <!-- In this case, to call an action from the menu, we create the entire window now. -->
                    <command>nasal</command>
                    <script>globals['__addon[org.flightgear.addons.CanvasSkeleton]__'].AboutTransientDialog.new();</script>
                </binding>
            </item>
            <item>
                <label>Persistent About Dialog...</label>
                <name>skeleton-about-persistent-dialog</name>
                <binding>
                    <!-- We have already created a window instance, so we are just showing it here. -->
                    <command>nasal</command>
                    <script>globals['__addon[org.flightgear.addons.CanvasSkeleton]__'].g_AboutDialog.show();</script>
                </binding>
            </item>

            <!--
            FOR DEVELOPMENT ONLY!
            trigger reload of addon-main.nas
            1) This item should be REMOVED for release versions.
            2) replace addon ID to match your addon
            3) For convenience, you can use a .env file with DEV_MODE=true to
                enable this menu item, without the need to edit this file.
            -->
            <!-- <item>
                <label>Dev Reload</label>
                <binding>
                    <command>addon-reload</command>
                    <id>org.flightgear.addons.CanvasSkeleton</id>
                </binding>
            </item> -->

        </menu>
    </menubar-items>
</PropertyList>
